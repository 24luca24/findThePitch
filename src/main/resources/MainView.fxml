<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="400.0" stylesheets="@styles/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fl.findthepitch.view.MainView">
   <children>
      <!-- Background image with opacity for better visibility of buttons -->
      <ImageView fitHeight="600.0" fitWidth="428.0" opacity="0.75" pickOnBounds="true" styleClass="image-background">
         <image>
            <Image url="@images/mainView.jpg" />
         </image>
      </ImageView>

      <!-- Register Button -->
      <Button fx:id="register" layoutX="141.0" layoutY="185.0" mnemonicParsing="false" onAction="#goToRegisterPage" prefHeight="44.0" prefWidth="146.0" styleClass="button" text="Register" />

      <!-- Login Button -->
      <Button fx:id="login" layoutX="141.0" layoutY="278.0" mnemonicParsing="false" onAction="#goToLoginPage" prefHeight="44.0" prefWidth="146.0" styleClass="button" text="Login" />

      <!-- Login as Guest Button -->
      <Button fx:id="loginAsGuest" layoutX="141.0" layoutY="373.0" mnemonicParsing="false" onAction="#enterApp" styleClass="button" text="Login As Guest" />
   </children>
</AnchorPane>
